---
import "../styles/global.css";
import tutoringTimes from '../data/tutoringTimes.json';

// Define the weekdays to show (Monday through Friday)
const daysOfWeek = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'];

// Group events by day.
const eventsByDay = {
  Monday: [],
  Tuesday: [],
  Wednesday: [],
  Thursday: [],
  Friday: []
};

tutoringTimes.forEach((session) => {
  // Extract the day from the session time string (assumes format "Day, time-range")
  const day = session.time.split(',')[0].trim();
  if (eventsByDay[day]) {
    eventsByDay[day].push(session);
  }
});
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Joel's Tutoring Calendar</title>
  </head>
  <body class="bg-gray-100">
    <!-- Full-height container centered both vertically and horizontally -->
    <div class="min-h-screen flex flex-col items-center justify-center px-4">
      <!-- Page Title -->
      <h1 class="text-4xl font-bold mb-8">Joel's Tutoring Calendar</h1>

      <!-- Calendar Card -->
      <div class="w-full max-w-6xl bg-white shadow-lg rounded overflow-hidden">
        <!-- Calendar Header: Display weekdays -->
        <div class="grid grid-cols-5 border-b">
          {daysOfWeek.map((day) => (
            <div class="p-4 text-center font-semibold text-lg" key={day}>
              {day}
            </div>
          ))}
        </div>

        <!-- Calendar Body: Events organized in a 5-column grid -->
        <div class="p-4">
          <div class="grid grid-cols-5 gap-4">
            {daysOfWeek.map((day) => (
              <div key={day} class="space-y-4">
                {eventsByDay[day].length > 0 ? (
                  eventsByDay[day].map((event, index) => (
                    <div key={index} class="bg-blue-100 border-l-4 border-blue-500 p-3 rounded shadow">
                      <h3 class="font-bold">{event.title}</h3>
                      <p class="text-sm text-gray-600">{event.time}</p>
                      <p class="text-sm text-gray-600">{event.location}</p>
                    </div>
                  ))
                ) : (
                  <p class="text-gray-400 text-center">No events</p>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
